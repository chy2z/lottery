<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    >

    <!-- top -->
    <RelativeLayout
        android:id="@+id/relativeLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/title_black"
                android:textSize="@dimen/title_right" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="@color/title_black"
            android:textSize="@dimen/title_center" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/title_bg"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户余额（元）"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/txt_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/txt_white"
                    android:textSize="30sp" />

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/moneyCash"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_menu_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_left_right"
            android:paddingRight="@dimen/space_left_right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="现金提现"
                android:textSize="16sp"
                android:textColor="@color/fontleft"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text=""
                android:textColor="#BBBBBB" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray_3"  >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moneyDeail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_menu_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_left_right"
            android:paddingRight="@dimen/space_left_right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="现金明细"
                android:textSize="16sp"
                android:textColor="@color/fontleft"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text=""
                android:textColor="#BBBBBB" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray_3"  >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bindAlipay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_menu_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_left_right"
            android:paddingRight="@dimen/space_left_right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定支付宝"
                android:textSize="16sp"
                android:textColor="@color/fontleft"
                />

            <TextView
                android:id="@+id/alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/txt_gray"
                />

            <TextView
                android:id="@+id/alipayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="未绑定"
                android:textColor="@color/txt_gray" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray_3"  >
        </LinearLayout>

        </LinearLayout>

</LinearLayout>