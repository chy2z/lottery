<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white"
    android:orientation="vertical">

    <!-- head -->
    <RelativeLayout
        android:id="@+id/relativeLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_bg">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/txtback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/title_black"
                android:textSize="@dimen/title_right" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="发布动态"
            android:textColor="@color/title_black"
            android:textSize="@dimen/title_center" />

        <TextView
            android:id="@+id/writeDynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="确认发布"
            android:textColor="@color/title_black"
            android:textSize="@dimen/title_right" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/publishLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="动态内容"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/title_right" />

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:ems="10"
                android:hint="说点什么吧......"
                android:maxLength="250"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:textColor="@color/txt_black"
                android:textColorHint="#D6E2E1"
                android:textSize="16sp">

                <requestFocus></requestFocus>
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray_3"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="添加图片"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/title_right" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/reLayout1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                <ImageView
                    android:id="@+id/selectFile1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectfile" />

                    <ImageView
                        android:id="@+id/delSelectFile1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/selectFile2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/selectfile"
                        android:layout_centerInParent="true"
                        />

                    <ImageView
                        android:id="@+id/delSelectFile2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/selectFile2"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reLayout3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                <ImageView
                    android:id="@+id/selectFile3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectfile" />

                    <ImageView
                        android:id="@+id/delSelectFile3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/reLayout4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                <ImageView
                    android:id="@+id/selectFile4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectfile" />


                    <ImageView
                        android:id="@+id/delSelectFile4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/selectFile5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/selectfile"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/delSelectFile5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/selectFile5"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />
               </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reLayout6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                <ImageView
                    android:id="@+id/selectFile6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectfile" />
                    <ImageView
                        android:id="@+id/delSelectFile6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/reLayout7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                    <ImageView
                    android:id="@+id/selectFile7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectfile" />

                    <ImageView
                        android:id="@+id/delSelectFile7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/selectFile8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/selectfile"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/delSelectFile8"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/selectFile8"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reLayout9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    >

                    <ImageView
                    android:id="@+id/selectFile9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectfile" />

                    <ImageView
                        android:id="@+id/delSelectFile9"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/del" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="照片最多添加9张"
                android:textColor="@color/txt_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
