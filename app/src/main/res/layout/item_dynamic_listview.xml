<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"   
    android:background="@color/txt_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chy2z"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00"
                android:textColor="@color/txt_gray"
                android:textSize="10dp" />
        </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="评论"
            android:padding="1dp"
            android:id="@+id/ButComment"
            android:background="@drawable/bluebox"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/f_l_10dp"
            android:textColor="@color/dyblue"
            android:layout_marginRight="5dp"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="未关注"
            android:padding="1dp"
            android:id="@+id/ButWatch"
            android:background="@drawable/redbox"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/f_l_10dp"
            android:textColor="@color/dyred"
            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/content"
            android:background="@drawable/selector_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="咖忙"
            android:textSize="12sp"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutimgRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/contentImg1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/contentImg2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/contentImg3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutimgRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/contentImg4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/contentImg5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginLeft="2dp"
            />
        <ImageView
            android:id="@+id/contentImg6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutimgRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/contentImg7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/contentImg8"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginLeft="2dp"
            />
        <ImageView
            android:id="@+id/contentImg9"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/login_head"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/coordinate"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/address"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咖忙"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_menu_item"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:id="@+id/zan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/zan"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/likeCount"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12dp"
            android:textColor="#E24c4b"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutReplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="visible"
        >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:background="@drawable/container_corners_4"
        >
        <cn.lottery.framework.widget.editText.EditTextIme
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:ems="10"
            android:hint="评论"
            android:inputType="textMultiLine"
            android:padding="6dp"
            android:maxLength="250"
            android:textColor="@color/txt_black"
            android:textColorHint="#D6E2E1"
            android:textSize="16sp"
            android:enabled="true"
            >
        </cn.lottery.framework.widget.editText.EditTextIme>
    </LinearLayout>
    <Button
        android:id="@+id/release"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="发布"
        android:background="@drawable/btn_yellow"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/f_l_10dp"
        android:textColor="@color/txt_white"
        android:visibility="gone"
        />
    </LinearLayout>

</LinearLayout>